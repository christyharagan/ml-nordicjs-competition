{
    "compilerOptions": {
        "emitDecoratorMetadata": false,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "rootDir": ".",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "ES5",
        "outDir": "./dist",
        "experimentalDecorators": true
    },
    "compileOnSave": false,
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./markscriptfile.ts",
        "./server.ts",
        "./lib/**/*.ts",
        "./typings/**/*.d.ts",
        "./node_modules/*/*.d.ts",
        "./example/**/*.ts",
        "./test/**/*.ts"
    ],
    "files": [
        "./markscriptfile.ts",
        "./server.ts",
        "./lib/databaseModel.ts",
        "./lib/models/answer.ts",
        "./lib/models/statement.ts",
        "./lib/services/playService.ts",
        "./lib/services/preperationService.ts",
        "./lib/services/resultsService.ts",
        "./typings/es6/es6.d.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts",
        "./node_modules/markscript-core/markscript.d.ts",
        "./node_modules/markscript-koa/markscript-koa.d.ts",
        "./node_modules/markscript-project/markscript-project.d.ts",
        "./node_modules/markscript-uservices/markscript-uservices.d.ts",
        "./node_modules/ml-admin/ml-admin.d.ts",
        "./node_modules/ml-typescript-definitions/client.d.ts",
        "./node_modules/ml-typescript-definitions/server.d.ts",
        "./node_modules/speckle/speckle.d.ts",
        "./node_modules/typescript-schema/typescript-schema.d.ts",
        "./node_modules/uservices/uservices.d.ts",
        "./example/data.ts",
        "./example/loadData.ts",
        "./test/test.ts"
    ]
}
